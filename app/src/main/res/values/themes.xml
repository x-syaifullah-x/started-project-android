<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Application" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TOOLBAR START-->
    <style name="Toolbar.TextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <color name="Toolbar.Title.Color">#ffff</color>
    <!-- TOOLBAR END-->

    <style name="Theme.Application.NoActionBar" parent="Theme.Application">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Application.Splash" parent="Theme.Application.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/activity_splash</item>
    </style>

    <!--SPLASH START-->
    <color name="splash_background_color">@color/white</color>
    <color name="splash_logo_color">@color/black</color>
    <!--SPLASH END-->
</resources>